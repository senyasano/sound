<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">

    <div class="row">
      <div class="col-md-3">
        <% if user_signed_in? %>
          <%= render 'facilities/sidebar', user: current_user %>
        <% else %>
          <%= render 'facilities/nologin' %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1" >
        <h2>Facility detail</h2>
        <div class= "card w-75">
          <%= attachment_image_tag @facility, :image, format:'jpeg', fallback:"default-image.jpg" , class:"card-image-top"%>
          <div class="card-body">
            <h5 class="card-title"><%= @facility.name %></h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= @facility.address %></li>
              <li class="list-group-item"><%= link_to "サイトはこちら", @facility.url %></li>
            </ul>
            <p>updated by <%= @facility.user.name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>