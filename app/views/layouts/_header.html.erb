<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-music"></i>
        <span>Sound Output</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li>
            <div class="search_form">
              <%= form_with url: search_path, local: true, method: :get ,class:"nav-link text-light" do |f| %>
                <%= f.text_field :word ,placeholder:"施設のキーワード"%>
                <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
              <% end %>
            </div>
          </li>



          <% if user_signed_in? %>
          <li>
            <a class="nav-link text-light" href="/facilities" >
              <i class="fas fa-search"></i>一覧
            </a>
          </li>
          <li>
            <a class="nav-link text-light" href="/facilities/new">
              <i class="fas fa-plus"></i>施設新規登録
            </a>
          </li>
          <li>
            <a class="nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out" >
              <i class="fas fa-sign-out-alt"></i>Log out
            </a>
          </li>
          <% else %>
          <li>
            <a class="nav-link text-light" href="/facilities">
              <i class="fas fa-home"></i>一覧
            </a>
          </li>
          <li>
            <a class="nav-link text-light" href="/users/sign_up">
              <i class="fas fa-user-plus"></i>Sign up
            </a>
          </li>
          <li>
            <a class="nav-link text-light" href="/users/sign_in">
              <i class="fas fa-sign-in-alt"></i>Log in
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>