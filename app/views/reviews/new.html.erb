<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">

    <div class="row">
      <div class="col-md-3">
        <% if user_signed_in? %>
          <%= render 'facilities/sidebar', user: current_user %>
        <% else %>
          <%= render 'facilities/nologin' %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1" >
        <h2>New Review</h2>
        <div class= "card p-4">
          <h5 class="card-title"><%= @facility.name %></h5>
          <p>
            <%= @facility.address %><br>
            updated by <%= @facility.user.name %>
          </p>
        </div>
        <div class="form-body p-4">
           <% if @review.errors.any? %>
            <h2><%= @review.errors.count %>error prohibited this obj from being saved:</h2>
            <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
          <%= form_with model: @review, url: facility_reviews_path, local:true do |f| %>
            <div class="input-group mb-3 mt-4">
              <%= f.text_field :people, class:"form-control", placeholder:"利用人数" %>
            </div>
            <%= f.text_field :borrowed_goods, class:"form-control", rows:"3", placeholder:"借用品" %>

            <%= f.text_field :usage_fee, class:"form-control", rows:"3", placeholder:"利用料" %>
            <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"感想" %>
            <br>
            <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>